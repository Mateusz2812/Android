<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/lightblue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeSwitch" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#CF131A</item>
        <item name="colorPrimaryDark">@color/darkred</item>
        <item name="colorAccent">@color/darkred</item>
        <item name="android:windowBackground">@color/lightblue</item>
        <item name="colorButtonNormal">#EAEAEA</item>

    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">true</item>
        <item name="android:colorPrimary">@android:color/black</item>
        <item name="android:colorPrimaryDark">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:color">@android:color/white</item>
        <item name="android:windowBackground">#3A3A3A</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="DarkThemeStylesSettingActivity" parent="Theme.AppCompat">
        <item name="windowActionBar">true</item>
        <item name="android:colorPrimary">@android:color/black</item>
        <item name="android:colorPrimaryDark">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/darkred</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:color">@android:color/white</item>
        <item name="android:windowBackground">#3A3A3A</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

</resources>